<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/FontTextView</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="FontTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="DefaultButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HintTitle">
        <item name="android:textColor">#8C8C8C</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="TextBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>


    <style name="TitleDialog" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="TitleDialog24" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="DescriptionDialog" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textColor">@color/blackDescription</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>
    <style name="DescriptionDialog14" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textColor">@color/blackDescription</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>
</resources>